{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "Shisō no Senshi",
	"version": "0.1.0",
	"identifier": "com.shiso-no-senshi.app",
	"build": {
		"beforeDevCommand": "pnpm dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "pnpm build",
		"frontendDist": "../build"
	},
	"app": {
		"enableGTKAppId": true,
		"macOSPrivateApi": true,
		"windows": [
			{
				"title": "Shisō no Senshi",
				"width": 800,
				"height": 600,
				"center": true
			}
		],
		"security": {
			"csp": null,
			"pattern": {
				"use": "isolation",
				"options": {
					"dir": "../isolation"
				}
			}
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"]
	}
}
